<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView" />

        <TextView
            android:text="Patient's name"
            android:layout_width="match_parent"
            android:id="@+id/textView6"
            android:layout_weight="0.00"
            android:layout_height="35dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Start date"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/textView10"
                android:layout_weight="1" />

            <TextView
                android:text="End Date"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/textView9"
                android:layout_weight="1" />
        </LinearLayout>

        <Button
            android:text="Filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button5" />

        <TextView
            android:text="This Chart shows you about "
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/textView12" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:srcCompat="@android:drawable/presence_video_away"
            android:id="@+id/imageView2" />

        <TextView
            android:text="Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView11" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Home_button"
            android:layout_weight="1" />

        <Button
            android:text="Follow Up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/FollowUp_button"
            android:textSize="10dp"
            android:layout_weight="1" />

        <Button
            android:text="Reward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Reward_button"
            android:layout_weight="1" />

        <Button
            android:text="Patient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Patient_Button"
            android:layout_weight="1" />

    </LinearLayout>
</RelativeLayout>



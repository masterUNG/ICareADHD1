<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:text="Reward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView21"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_weight="0.33" />

    <TextView
        android:text="@string/textview_listoftask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview_listoftask" />

    <ListView
        android:id="@+id/listtaskR"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="20dp" />


    <Button
        android:text="Add Task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_addnewtaskR" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.33">

            <TextView
                android:text="List of rewards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView25"
                android:layout_weight="1" />

            <ListView
                android:id="@+id/listReward"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_margin="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.33">

    </RelativeLayout>

    <Button
        android:text="Add Reward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Reward_addreward" />

    <TextView
        android:text="Balance : 500 points "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_weight="1.04" />

    <Button
        android:text="use point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button9"
        android:layout_weight="0.33" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Home_button"
            android:layout_weight="1" />

        <Button
            android:text="Follow Up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/FollowUp_button"
            android:textSize="13dp"
            android:layout_weight="1" />

        <Button
            android:text="Patient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Patient_Button"
            android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>

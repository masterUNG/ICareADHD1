<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:text="Welcome to iCare-ADHD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="20dp" />

    <TextView
        android:text="Agenda"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/textView14" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TextView
            android:text="@string/textview_listofmedication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_listofmedH" />

        <ListView
            android:id="@+id/listmedH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="0.80">

        <TextView
            android:text="@string/textview_listoftask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_listoftaskH" />

        <ListView
            android:id="@+id/listtaskH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp" />


    </RelativeLayout>

    <Button
        android:text="Add Task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_addtaskH"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Home_button"
            android:layout_weight="1" />

        <Button
            android:text="Follow Up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/FollowUp_button"
            android:textSize="13dp"
            android:layout_weight="1" />

        <Button
            android:text="Reward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Reward_button"
            android:layout_weight="1" />

        <Button
            android:text="Patient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Patient_Button"
            android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>
